[
  {
    "bindings": {
      "cmd-shift-[": "pane::ActivatePreviousItem",
      "cmd-shift-]": "pane::ActivateNextItem",
      "ctrl-pagedown": "pane::ActivatePreviousItem",
      "ctrl-pageup": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivateNextItem",
      "ctrl-tab": "pane::ActivatePreviousItem",
      "cmd-+": "zed::IncreaseBufferFontSize"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-up": "editor::AddSelectionAbove",
      "ctrl-shift-down": "editor::AddSelectionBelow",
      "cmd-shift-space": "editor::SelectAll",
      "ctrl-shift-m": "editor::SelectLargerSyntaxNode",
      "cmd-shift-l": "editor::SplitSelectionIntoLines",
      "cmd-shift-a": "editor::SelectLargerSyntaxNode",
      "shift-f12": "editor::FindAllReferences",
      "alt-cmd-down": "editor::GoToDefinition",
      "ctrl-alt-cmd-down": "editor::GoToDefinitionSplit",
      "alt-shift-cmd-down": "editor::FindAllReferences",
      // "ctrl-.": "editor::GoToHunk",
      // "ctrl-,": "editor::GoToPreviousHunk",
      "ctrl-backspace": "editor::DeleteToPreviousWordStart",
      "ctrl-delete": "editor::DeleteToNextWordEnd"
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "cmd-r": "outline::Toggle"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "f4": "search::SelectNextMatch",
      "shift-f4": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-k cmd-b": "workspace::ToggleLeftDock",
      "cmd-t": "file_finder::Toggle",
      "shift-cmd-r": "project_symbols::Toggle",
      // Currently busted: https://github.com/zed-industries/feedback/issues/898
      "ctrl-0": "project_panel::ToggleFocus"
    }
  },
  {
    "bindings": {
      "ctrl-alt-shift-m": "workspace::ToggleVimMode"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-k": "editor::MoveLineUp",
      "ctrl-j": "editor::MoveLineDown",
      // "shift-k": "editor::HalfPageUp",
      // "shift-j": "editor::HalfPageDown",
      // "shift-k": "vim::ScrollUp",
      // "shift-j": "vim::ScrollDown",
      "ctrl-.": "editor::ToggleCodeActions",
      "ctrl-a": "editor::SelectAll",
      "ctrl-shift-a": "editor::SelectAll",
      "ctrl-shift-c": "editor::Copy",
      "ctrl-shift-v": "editor::Paste"
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      "ctrl-d": "editor::SelectNext"
    }
  }
]

